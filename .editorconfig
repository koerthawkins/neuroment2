root = True

[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
indent_style = space
trim_trailing_whitespace = true
indent_size = 4

# 4 space indentation
[*.py]
max_line_length = 119

[{*.yml,*.yaml,*.json}]
indent_size = 2

[*.txt]
max_line_length = 79

# The JSON files contain newlines inconsistently
[*.json]
indent_size = 2
insert_final_newline = ignore

